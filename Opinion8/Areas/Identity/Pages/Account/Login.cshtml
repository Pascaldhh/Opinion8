@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container py-8">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="flex justify-center">
        <div class="max-w-2xl w-full mt-8">
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
                <div class="flex flex-col gap-y-3 mt-4">
                    <div class="flex flex-col">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="shadow py-2 px-4 rounded text-black mt-0.5" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-red-500"></span>
                    </div>
                    <div class="flex flex-col">
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <input asp-for="Input.Password" class="shadow py-2 px-4 rounded text-black mt-0.5" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="Input.Password" class="text-red-500"></span>
                    </div>
                    <div class="flex flex-col">
                        <label asp-for="Input.RememberMe" class="">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <button id="login-submit" type="submit" class="text-white px-6 py-2 bg-blue-600 rounded mt-6 w-full hover:bg-blue-400 transition-colors">Log in</button>

                <div class="flex flex-col gap-y-1 mt-6">
                    <p>
                        <a class="hover:underline" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a class="hover:underline" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a class="hover:underline" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
