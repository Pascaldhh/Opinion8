@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="container py-8">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="flex justify-center">
        <div class="max-w-2xl w-full mt-8">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>Create a new account.</h2>
                <hr/>
                <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
                <div class="flex flex-col gap-y-3 mt-4">
                    <div class="flex flex-col">
                        <label asp-for="Input.Email">Email</label>
                        <input asp-for="Input.Email" class="shadow py-2 px-4 rounded text-black mt-0.5" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                        <span asp-validation-for="Input.Email" class="text-red-500 mt-1"></span>
                    </div>
                    <div class="flex flex-col">
                        <label asp-for="Input.Password">Password</label>
                        <input asp-for="Input.Password" class="shadow py-2 px-4 rounded text-black mt-0.5" autocomplete="new-password" aria-required="true" placeholder="password"/>
                        <span asp-validation-for="Input.Password" class="text-red-500 mt-1"></span>
                    </div>
                    <div class="flex flex-col">
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <input asp-for="Input.ConfirmPassword" class="shadow py-2 px-4 rounded text-black mt-0.5" autocomplete="new-password" aria-required="true" placeholder="password"/>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 mt-1"></span>
                    </div>
                </div>
                <button id="registerSubmit" type="submit" class="text-white px-6 py-2 bg-blue-600 rounded mt-6 w-full hover:bg-blue-400 transition-colors">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
